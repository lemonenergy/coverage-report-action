{
  "name": "typescript-action-template",
  "version": "1.0.2",
  "description": "",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild 2>/dev/null",
    "test": "vitest",
    "test:ci": "vitest run --coverage --coverage.provider=v8 --coverage.reporter=json-summary",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache --fix .",
    "all": "pnpm run lint && pnpm run format && pnpm run types",
    "release": "changelogen --release HEAD && git push --follow-tags",
    "release:first": "changelogen -r 1.0.0 --release HEAD && git push --follow-tags",
    "dist": "pnpm run build || true && git add . && git commit -m 'chore: update dist'",
    "types": "tsc --skipLibCheck --noEmit"
  },
  "keywords": [
    "typescript",
    "action",
    "github"
  ],
  "author": "Lemon Energy",
  "license": "UNLICENSED",
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "changelogen": "^0.6.1",
    "eslint": "^9.29.0",
    "eslint-plugin-sort": "^4.0.0",
    "execa": "^9.6.0",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "unbuild": "^3.5.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.1"
}
